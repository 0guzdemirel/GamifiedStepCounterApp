<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/top_rounded_shape_color_green_50_rad_10"
    android:orientation="vertical">

    <View
        android:layout_width="40dp"
        android:layout_height="5dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_shape_color_green_600_rad_5" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/articlePhotoIV"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="15dp"
        android:scaleType="centerCrop"
        android:src="@drawable/random_post_img"
        app:riv_border_color="@color/colorBrown_900"
        app:riv_border_width="2dp"
        app:riv_corner_radius="5dp" />

    <TextView
        android:id="@+id/articleTitleTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:fontFamily="@font/quicksand_bold"
        android:text="Lorem Article"
        android:textColor="@color/colorBrown_900"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/articleDesTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/quicksand_regular"
        android:text="Lorem IpsumÂ is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electronic typesetting, remaining essentially unchanged. It was popularised in the 1960s with the release of Letraset sheets containing Lorem Ipsum passages, and more recently with desktop publishing software like Aldus PageMaker including versions of Lorem Ipsum."
        android:textColor="@color/colorBrown_900"
        android:textSize="12sp" />

</LinearLayout>